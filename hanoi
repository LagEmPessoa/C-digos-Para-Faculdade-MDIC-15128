def hanoi(n,Orig,Dest,Apoio):
    if (n > 0):
        hanoi(n-1,Orig,Apoio,Dest)
        print("Peça na torre",Orig,"para",Dest)
        hanoi(n-1,Apoio,Dest,Orig)

n = int(input("Quantas peças? "))
o = int(input("Qual a torre de origem? "))
a = int(input("Qual a torre de apoio? "))
d = int(input("Qual a torre de destino das peças? "))

hanoi(n,o,d,a)
