import java.util.Scanner;
public class MyClass {
    public static void main(String args[]) {
        int A,B,C;
        Scanner leia = new Scanner (System.in);
        System.out.println("Qual o valor do primeiro lado? ");
        A = leia.nextInt();
        System.out.println("Qual o valor do segundo lado? ");
        B = leia.nextInt();
        System.out.println("Qual o valor do terceiro lado? ");
        C = leia.nextInt();
        if ((A < B + C) && (B < A + C) && (C < B + A)){
            System.out.println("Os valores informados formam um triângulo!");
            if (A == B && B == C){
                System.out.print("Um triângulo do tipo Equilátero!");
            }else if(A == B || B == C || A==C){
                System.out.print("Um triângulo do tipo Isósceles!");
            }else{
                System.out.print("Um triângulo do tipo Escaleno!");
            }
        }else{
            System.out.println("Os valores informados NÃO formam um triãngulo! Tente novamente! ");
        }
    }
}
